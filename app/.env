# =============================================================================
# ELK/Elasticsearch SIEM Configuration
# =============================================================================

# Elasticsearch Connection
ELASTICSEARCH_URL=http://192.168.10.76:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_VERIFY_SSL=false

# Index Patterns
ELASTICSEARCH_INDEX_ALERTS=.alerts-security.alerts-*
ELASTICSEARCH_INDEX_LOGS=logs-*,winlogbeat-*,filebeat-*

# Primary index for Sysmon/Winlogbeat events (used by detection engine)
ELK_INDEX=winlogbeat-9.2.2-*

# =============================================================================
# SIEM Mode: "mock" for offline development, "elastic" for live ELK
# =============================================================================
SIEM_MODE=elastic

# =============================================================================
# Phishing Awareness Lab Configuration
# =============================================================================
PHISHING_SIM_ENABLED=true
PHISHING_DELIVERY_MODE=MAIL_SINK
ENABLE_LOCAL_MAIL_SINK=true
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
ALLOWLIST_DOMAINS=lab.local,example.local,test.local,ransomrun.local,training.local,gmail.com
